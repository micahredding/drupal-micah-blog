#footer #block-block-7 {/* float:left; width:70%; clear:left; */}
#footer .block-views {width:23%; margin-right:10px; float:left; clear:none;}
#footer #block-search-form {float:left; width:23%; clear:right;}
#footer #block-views-list-of-taxonomy-block-1 {width:12%;}
#footer #block-views-list-of-taxonomy-block-2 {width:30%;}

#footer .end {clear:both;}